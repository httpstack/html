{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                // This is the most crucial part.
                // It maps the server's path to your local project's path.
                // The key is the path on the server, the value is your local path.
                // Example: "/var/www/html" on the server maps to the root of your VS Code workspace.
                "/var/www/html": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug"
            }
        }
    ]
},
{
    "type": "browser-preview",
    "request": "launch",
    "name": "Browser Preview: Attach"
},
{
    "type": "msedge",
    "name": "Launch Microsoft Edge",
    "request": "launch",
    "runtimeArgs": [
        "--remote-debugging-port=9222"
    ],
    "url": "/home/cmcintosh/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.9/out/startpage/index.html", // Provide your project's url to finish configuring
    "presentation": {
        "hidden": true
    }
},
{
    "type": "msedge",
    "name": "Launch Microsoft Edge in headless mode",
    "request": "launch",
    "runtimeArgs": [
        "--headless",
        "--remote-debugging-port=9222"
    ],
    "url": "/home/cmcintosh/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.9/out/startpage/index.html", // Provide your project's url to finish configuring
    "presentation": {
        "hidden": true
    }
},
{
    "type": "vscode-edge-devtools.debug",
    "name": "Open Edge DevTools",
    "request": "attach",
    "url": "/home/cmcintosh/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.9/out/startpage/index.html", // Provide your project's url to finish configuring
    "presentation": {
        "hidden": true
    }
